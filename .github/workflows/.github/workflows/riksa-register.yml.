name: Riksa Register

on: [push]

jobs:
  build-and-deploy:

    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Install dependencies
        run: npm install

      - name: Run linter and analyzer
        run: npm run lint && npm run analyze

      - name: Build and deploy to production
        run: ng build --prod && ng deploy
